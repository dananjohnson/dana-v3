<nav aria-label="Pagination" class="pagination">
  <ul>
		<li>
			{% if pagination.href.previous %}
				{{ link(pagination.href.previous) }}
			{% else %}
				{{ nonlink() }}
			{% endif %}
		</li>
		<li>
			{% if pagination.href.next %}
				{{ link(pagination.href.next, "next") }}
			{% else %}
				{{ nonlink("next") }}
			{% endif %}
		</li>
  </ul>
</nav>