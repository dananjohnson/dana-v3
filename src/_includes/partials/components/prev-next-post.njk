{% macro nonlink(direction="prev") %}
	<span aria-hidden class="pagination__item pagination__item--{{ direction }}">
			<span>{{ "âœ‹" if direction == "prev" else "" }}</span>
			<span>{{ "Next note" if direction == "next" else "Prev note" }}</span>
