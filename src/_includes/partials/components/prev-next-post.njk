<nav aria-label="Previous/Next post" class="pagination">
  <ul>
		<li>
			{% set previous = collections.notes | getPreviousCollectionItem(page) %}
			{% if previous %}
				{{ link(previous.url) }}
			{% else %}
				{{ nonlink() }}
			{% endif %}
		</li>
		<li>
			{% set next = collections.notes | getNextCollectionItem(page) %}
			{% if next %}
				{{ link(next.url, "next") }}
			{% else %}
				{{ nonlink("next") }}
			{% endif %}
		</li>
  </ul>
</nav>